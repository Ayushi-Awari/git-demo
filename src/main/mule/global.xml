	</salesforce:sfdc-config>
	<error-handler name="globalError_Handler" doc:id="b731bc0b-ac68-47c4-8a36-2b945bc63905" >
	<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="78ac774f-bddc-4527-a9f0-852bad77f6a0" type="APP:INVALID_DESTINATION">
				<ee:transform doc:name="error.description" doc:id="c27e385b-a9f4-440a-b561-390cb87d37ec">
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"message": error.description
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
				<set-variable value="400" doc:name="httpStatus" doc:id="662b2dc2-2a18-47e3-8fa8-7722ab6ced80" variableName="httpStatus" />
			</on-error-continue>
		<on-error-continue enableNotifications="true" logException="true" doc:name="on-error-continue" doc:id="a7d9173c-6852-47e8-a8f6-ede18ccaaafb" type=" WSC:CONNECTIVITY, WSC:INVALID_WSDL">
			<ee:transform doc:name="data unavailable" doc:id="1641cdbc-7833-4595-9a03-3413f3319c27" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	"message": "Data unavailable. Try later" ++ error.description as String
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="500" doc:name="httpStatus" doc:id="c66ffbf6-e3ad-4c83-9c96-db2c4ad3d77b" variableName="httpStatus"/>
		</on-error-continue>
		<on-error-continue enableNotifications="true" logException="true" doc:name="on-error-continue" doc:id="17d2df1a-4e85-4b91-b2b8-7fa51555704c" type="ANY">
			<ee:transform doc:name="error.description" doc:id="3934e453-701c-4eab-bd33-062604d17d3e" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="500" doc:name="httpStatus" doc:id="a81eb1bd-3a67-426e-857e-c65e035430f3" variableName="httpStatus"/>
		</on-error-continue>
	</error-handler>
