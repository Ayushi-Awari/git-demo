	<configuration-properties doc:name="Configuration properties" doc:id="f0ac9f68-8cde-4197-8e96-8f4944a846ab" file="config.yaml" />
	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="26e7ed93-95e7-4dfb-bfc3-2537c85612ef" >
		<http:listener-connection host="0.0.0.0" port="${http.port}" />
		
	</http:listener-config>
	<http:request-config name="HTTP_Request_config_training" doc:name="HTTP Request configuration" doc:id="825e5e7a-ed37-4f46-9682-ae3d43970bcb" basePath="/${training.basepath}" >
		<http:request-connection host="${training.host}" port="${training.port}" />
	</http:request-config>
	<demo:config name="Demo_Config" doc:name="Demo Config" doc:id="2086398d-db7f-421a-a8bc-8b32b533dc4a" property_host="${american.host}" property_port="${american.port}" property_protocol="${american.protocol}" property_basePath="${american.basepath}" />
	<wsc:config name="Delta_Web_Service_Consumer_Config" doc:name="Web Service Consumer Config" doc:id="2ad5fe59-99c3-44d0-84a9-6cf4c318e9c3" >
		<wsc:connection wsdlLocation="${delta.wsdl}" service="${delta.service}" port="${delta.port}" >
			<reconnection >
				<reconnect />
			</reconnection>
			<wsc:web-service-security actor="http://schemas.xmlsoap.org/soap/actor/next" />
		</wsc:connection>
	</wsc:config>
	<configuration doc:name="Configuration" doc:id="a5f8f8e3-3563-463d-a6be-e905fdb54320" defaultErrorHandler-ref="globalError_Handler" />
	<file:config name="File_Config" doc:name="File Config" doc:id="602bb9ca-c94f-464c-85e6-47903d17c990" >
		<file:connection workingDir="${file.accountsDir}" />
	</file:config>
	<db:config name="Database_Config" doc:name="Database Config" doc:id="2955a30f-6830-4d7c-8228-1bb51f165806" >
		<db:my-sql-connection host="${db.host}" port="${db.port}" user="${db.user}" password="${db.password}" database="${db.database}" />
	</db:config>
	<jms:config name="JMS_Config" doc:name="JMS Config" doc:id="0d6ba3e9-7654-4d73-b2d2-a8fc1f1037ad" >
		<jms:active-mq-connection specification="JMS_1_0_2b" >
			<jms:factory-configuration />
		</jms:active-mq-connection>
	</jms:config>
	<salesforce:sfdc-config name="Salesforce_Config" doc:name="Salesforce Config" doc:id="7efb4e53-8259-47fc-88b8-7e558399f168" >
